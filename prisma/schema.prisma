// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  UNISEX
  MEN
  WOMEN
}

enum Axis {
  Perfume
  Beauty
  Skincare
}

model Product {
  id Int @id @default(autoincrement())

  reference   String @unique
  ean         String @unique
  description String @unique
  size        String

  img String?

  axis      Axis
  category1 String
  category2 String

  regularPrice Float

  gender Gender

  timePeriod String

  sales Sale[] // product has many sales (disambiguating relations)

  brandId Int?
  brand   Brand? @relation(fields: [brandId], references: [id])
}

model Sale {
  id Int @id @default(autoincrement())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  date      DateTime @db.Date

  productSold Product @relation(fields: [productId], references: [id]) // connecting each sale to a product 
  productId   Int

  sellerId Int
  seller   User @relation(fields: [sellerId], references: [id]) // connecting each sale to a seller '(user) 
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  name     String
  email    String @unique
  password String

  country     String
  pointOfSale String

  sales Sale[] // a user has many sales (disambiguating relations)

  isAdmin Boolean @default(false)
}

model Brand {
  id Int @id @default(autoincrement())

  name String
  logo String

  products Product[]
}
